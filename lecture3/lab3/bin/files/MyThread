class MyThread extends Thread { 
volatile static int count;
String name;

public void run() {
for(int i = 0 ; i < 10 ; i++) { 
delay();
int x = count;
System.out.println("Thread " + name + " read " + x);
delay();
count = x + 1;
System.out.println("Thread " + name + " wrote " + (x + 1));
}
}

void delay() {
int delay = (int) (1000 * Math.random());
try {
Thread.sleep(delay);
     }
catch(Exception e) {
}
}
}
